                                            <th style="font-size: 18px;">Nombre Completo</th>
                                            <th style="font-size: 18px;">Nombre de Usuario</th>
                                            <th style="font-size: 18px;">Nivel de Usuario</th>
                                            <th style="font-size: 18px;">Estatus</th>
                                            <th style="font-size: 18px;">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="spacer"></tr>
                                        <tr class="tr-shadow">
                                            <% results.forEach((user)=>{ %>
                                                <tr>  
                                                    <td  style="font-size: 15px;"><%= user.noEmpleado %></td>  
                                                    <td  style="font-size: 15px;"><%= user.nombre %></td>
                                                    <td  style="font-size: 15px;"><%= user.username %></td>
                                                    <td  style="font-size: 15px;"><%= user.rol %></td>
                                                    <td  style="font-size: 15px;"> <%= user.status %></td>
                                                    <td  style="font-size: 15px;">
                                                        <div class="table-data-feature">
                                                            <a  onclick="confirmar(<%= user.idUsuario %>)" class="item" data-toggle="tooltip" data-placement="top" title="Delete"><i class="zmdi zmdi-delete"></i></a>
                                                        </div>
                                                    </td>
                                                </tr>                                   
                                             <% }) %>
